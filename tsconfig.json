    "noImplicitAny": false,
    "outDir": "./lib",
    "sourceMap": true,
    "allowJs": true,
    // "strict": true,
    "newLine": "LF",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}